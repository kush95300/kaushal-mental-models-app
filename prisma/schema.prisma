// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id               Int       @id @default(autoincrement())
  content          String
  isImportant      Boolean   @default(false)
  isUrgent         Boolean   @default(false)
  quadrant         String    @default("INBOX") // INBOX, DO, SCHEDULE, DELEGATE, ELIMINATE
  status           String    @default("TODO") // TODO, DONE
  estimatedMinutes Int?
  actualMinutes    Int?
  dueDate          DateTime?
  delegateId       Int?
  delegate         Delegate? @relation(fields: [delegateId], references: [id])
  workspaceId      Int       @default(1)
  workspace        Workspace @relation(fields: [workspaceId], references: [id])
  tags             String? // Comma-separated tags
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  completedAt      DateTime?
  isDeleted        Boolean   @default(false)

  @@index([quadrant])
  @@index([status])
  @@index([dueDate])
  @@index([workspaceId])
}

model Delegate {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  email     String?
  tasks     Task[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Workspace {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  color       String   @default("indigo")
  tasks       Task[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserConfig {
  id                 Int       @id @default(1)
  activeWorkspaceId  Int       @default(1)
  maxDailyMinutes    Int       @default(480) // 8 hours * 60 minutes
  analyticsStartDate DateTime?
  updatedAt          DateTime  @updatedAt
}
